<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="reminder_checkbox"
        android:summary="@string/pref_description_reminder"
        android:title="@string/pref_title_reminder" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="calendar_checkbox"
        android:title="@string/pref_title_calendar" />

    <ListPreference
        android:key="calendar_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_calendar_list"
        android:dialogTitle="@string/pref_calendar_dialog_title"
        android:dependency="calendar_checkbox" />
</PreferenceScreen>
